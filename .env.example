# =============================================================================
# Odisha Flood Validation System - Environment Variables
# =============================================================================
# Copy this file to .env and configure your values
# NEVER commit the actual .env file to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
POSTGRES_DB=flood_validation
POSTGRES_USER=flood_admin
POSTGRES_PASSWORD=YOUR_SECURE_PASSWORD_HERE
POSTGRES_PORT=5432

# Full connection string (constructed from above)
DATABASE_URL=postgresql://flood_admin:YOUR_SECURE_PASSWORD_HERE@localhost:5432/flood_validation

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000

# -----------------------------------------------------------------------------
# Data Paths (relative to project root or absolute)
# -----------------------------------------------------------------------------
DEM_PATH=data/processed/mahanadi_dem_30m.tif
HAND_PATH=data/processed/mahanadi_hand.tif
SLOPE_PATH=data/processed/mahanadi_slope.tif
GROUND_TRUTH_PATH=data/raw/bhuvan/fani_2019/fani_flood_inundation.shp

# -----------------------------------------------------------------------------
# External API Keys
# -----------------------------------------------------------------------------
# Twitter/X API (for social media data collection)
# Get from: https://developer.twitter.com/
TWITTER_BEARER_TOKEN=

# Mapbox (for map visualization)
# Get from: https://account.mapbox.com/
MAPBOX_TOKEN=

# -----------------------------------------------------------------------------
# Optional: Google Cloud Configuration
# -----------------------------------------------------------------------------
# For Google Earth Engine integration
GOOGLE_APPLICATION_CREDENTIALS=

# For cloud storage
GCS_BUCKET_NAME=

# -----------------------------------------------------------------------------
# Optional: PgAdmin Configuration
# -----------------------------------------------------------------------------
PGADMIN_EMAIL=admin@floodvalidation.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# -----------------------------------------------------------------------------
# Validation Algorithm Parameters
# -----------------------------------------------------------------------------
VALIDATION_THRESHOLD=0.7
PHYSICAL_WEIGHT=0.4
STATISTICAL_WEIGHT=0.4
REPUTATION_WEIGHT=0.2
